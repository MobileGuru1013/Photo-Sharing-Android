<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/btnLoginBackground" />
             <gradient  android:angle="-90" 
                  android:startColor="@color/btnLoginBackground"
                   android:endColor="@color/btnLoginBackground"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/btnLoginBackground" />
             <solid  android:color="@color/btnLoginBackground"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/btnLoginBackground" />
             <gradient  android:angle="-90" 
                  android:startColor="@color/btnLoginForeground" 
                  android:endColor="@color/btnLoginForeground" />            
         </shape>
     </item>
</selector>